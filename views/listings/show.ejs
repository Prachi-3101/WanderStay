<% layout("/layouts/boilerplate") %>
<div class="row">
  <div class="col-8 offset-3 mt-3">
    <h3><%= listing.title %></h3>
  </div>

  <div class="card col-5 offset-3 mt-2 show-card listing-card">
    <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing_image">
    <div class="card-body">
      <p class="card-text">
        <%= listing.description %><br>
        &#8377;<%= listing.price.toLocaleString("en-IN") %><br>
        <%= listing.location %><br>
        <%= listing.country %>
      </p>
    </div>
  </div>

  <!-- Buttons aligned with card -->
  <div class="btns mb-3 mt-3 d-flex justify-content-start gap-2 offset-3">
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark  px-3">Edit</a>
   <form method="post" action="/listings/<%= listing._id%>?_method=DELETE" 
          onsubmit="return confirm('⚠️ Are you sure you want to delete this listing?');">
      <button class="btn btn-dark delete-btn px-3">Delete</button>
    </form>
  </div>
  <div class="col-6 offset-3 mt-4">
  <h3 class="mb-3 text-center">✨ Every story matters! Share your WanderStay experience with us ✨</h3>

  <form action="/listings/<%= listing.id %>/reviews" method="POST" novalidate class="needs-validation">
    <div class=" review-section mb-3">
      <label for="rating" class="form-label fw-semibold">Rating</label>
      <input type="range" class="form-range" id="rating" min="1" max="5" name="review[rating]">
    </div>

    <div class="mb-3">
      <label for="comments" class="form-label fw-semibold" >Comments</label>
      <textarea class="form-control" id="comments" rows="4" placeholder="Tell us what made your stay memorable..." name="review[comment]" required></textarea>
      <div class="invalid-feedback">Don’t be shy! Tell us a bit about your stay — every story matters ✨</div>
    </div>

    <button type="submit" class="btn btn-dark rounded-pill px-4">
      🌿 Leave a Review
    </button>
  </form>
 <hr class="my-4" />

<h3 class="text-center mb-4">🌟 Guest Reviews</h3>

<div class="col-8 offset-2">
  <% if (listing.reviews.length === 0) { %>
    <p class="text-muted text-center fst-italic">
      No reviews yet — be the first to share your WanderStay story ✨
    </p>
  <% } else { %>
    <div class="row justify-content-center">
      <div class="row">
    <% for (review of listing.reviews) { %>
        <div class="col-md-6 mb-4">
        <div class="card h-100 border-0 shadow-sm review-card">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center mb-2">
            <h6 class="fw-semibold mb-0">
              <i class="bi bi-person-circle me-1"></i> Prachi
            </h6>
            <span class="text-warning fw-bold">
              <%= '⭐'.repeat(review.rating) %>
            </span>
          </div>
          <p class="text-secondary mb-1"><%= review.comment %></p>
          <p class="text-muted small mb-0">
            <i class="bi bi-calendar-event me-1"></i>
            <%= review.createdAt ? review.createdAt.toLocaleDateString('en-IN') : '' %>
          </p>
          <form class="mb-3 mt-2" method="POST" action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE">
        <button class="btn btn-sm btn-dark">Delete Review</button>
      </form>
        </div>
      </div>
      </div>
    <% } %>
    </div>
  <% } %>
</div>
  </div>
</div>
