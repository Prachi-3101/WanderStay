<% layout("/layouts/boilerplate") %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="card shadow-lg border-0 rounded-4 p-4">
        <div class="text-center mb-4">
          <h3 class="fw-bold">Welcome Back, Wanderer</h3>
          <p class="text-muted">Log in to continue your journey.</p>
        </div>

        <form action="/login" method="POST" class="needs-validation" novalidate>
          <div class="mb-3">
            <label for="username" class="form-label fw-semibold">Username</label>
            <input
              name="username"
              id="username"
              type="text"
              class="form-control"
              placeholder="Enter your username"
              required
            />
            <div class="invalid-feedback">Please enter your username.</div>
          </div>

          <div class="mb-4">
            <label for="password" class="form-label fw-semibold">Password</label>
            <input
              name="password"
              id="password"
              type="password"
              class="form-control"
              placeholder="Enter your password"
              required
            />
            <div class="invalid-feedback">Please enter your password.</div>
          </div>

          <div class="d-grid">
            <button class="btn btn-success btn-lg" type="submit">Log In</button>
          </div>
        </form>

        <div class="text-center mt-4">
          <p class="text-muted">
            Donâ€™t have an account?
            <a href="/signup" class="text-success fw-semibold text-decoration-none">Sign up</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
